<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homre.smartcity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ProfileActivity"></activity>
        <activity android:name=".NewsActivity"></activity>
        <activity android:name=".ShopActivity"></activity>
        <activity android:name=".NetworkActivity"></activity>
        <activity android:name=".PubActivity"></activity>
        <activity android:name=".SelectedNetworkActivity"></activity>
        <activity android:name=".CreateNetworkActivity"></activity>
        <activity android:name=".SelectedShopActivity"></activity>
        <activity android:name=".NetworkManagementActivity"></activity>
        <activity android:name=".NewsCreationActivity"></activity>

        <service android:name=".NotificationPush.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


</manifest>