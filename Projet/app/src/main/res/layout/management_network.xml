<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NetworkManagementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewMNetworkName"
            android:layout_width="match_parent"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewMNetworkMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:paddingTop="30dp"
            android:text="@string/txtMNetworkMembers" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RVMNetworkMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/member_item_list" />

        <TextView
            android:id="@+id/textViewMNetworkPendingMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:paddingTop="30dp"
            android:text="@string/txtMNetworkPendingMembers" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RVMNetworkPendingMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/member_item_list">

        </android.support.v7.widget.RecyclerView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/buttonMNetworkDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonMNetworkSuppr" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>