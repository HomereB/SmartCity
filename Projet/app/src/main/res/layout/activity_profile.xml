<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PubActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewProfileName"
            android:layout_width="match_parent"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"
            android:text="@string/txtProfilePseudo" />

        <TextView
            android:id="@+id/textViewProfileDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewProfileDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="@string/txtProfileDate" />

        <TextView
            android:id="@+id/textViewProfileDisplayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewProfileCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="@string/txtProfileCity" />

        <Spinner
            android:id="@+id/spinnerProfileCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewProfileSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="@string/txtProfileSexe" />

        <TextView
            android:id="@+id/textViewProfileDisplaySex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewProfileCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="@string/txtProfileInterest" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="571dp">

            <LinearLayout
                android:id="@+id/listProfileCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/buttonProfileApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonProfilValider" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:foregroundGravity="bottom">

            <fragment
                android:id="@+id/list"
                class="com.example.homre.smartcity.NavigationFragment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></fragment>
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>