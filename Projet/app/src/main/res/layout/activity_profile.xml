<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PubActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtProfilePseudo" />

        <EditText
            android:id="@+id/editTextProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textViewProfileDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtProfileDate" />

        <EditText
            android:id="@+id/editTextProfileDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/txtProfileDateModel"
            android:inputType="date" />

        <TextView
            android:id="@+id/textViewProfileCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtProfileCity" />

        <Spinner
            android:id="@+id/spinnerProfileCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewProfileSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtProfileSexe" />

        <RadioGroup
            android:id="@+id/radioGroupProfileSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonProfileM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/radioProfileSexeM" />

            <RadioButton
                android:id="@+id/radioButtonProfileF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/radioProfileSexeF" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewProfileCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtProfileInterest" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="167dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/listProfileCategories"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/buttonProfileApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonProfilValider" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

            <fragment
                android:id="@+id/list"
                class="com.example.homre.smartcity.NavigationFragment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"></fragment>
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>